#!/bin/bash

# Compilation

rm dgtal_wrap.cxx
rm *.so
rm *.o

swig3.0 -c++ -python -Wall dgtal.i
g++ -O2 -fPIC -c dgtal_wrap.cxx -I/usr/include/python2.7 -I/home/florent/projet/DGtal/src/ -I/home/florent/projet/DGtal/build/src/
g++ -O2 -fPIC -c ../../DGtal/src/DGtal/kernel/NumberTraits.cpp -I/home/florent/projet/DGtal/src/ -I/home/florent/projet/DGtal/build/src/
g++ -O2 -fPIC -c ../../DGtal/src/DGtal/arithmetic/LighterSternBrocot.cpp -I/home/florent/projet/DGtal/src/ -I/home/florent/projet/DGtal/build/src/
g++ -O2 -fPIC -c ../../DGtal/src/DGtal/base/Common.cpp -I/home/florent/projet/DGtal/src/ -I/home/florent/projet/DGtal/build/src/

g++ -shared Common.o LighterSternBrocot.o NumberTraits.o dgtal_wrap.o -o _dgtal.so

# ex√©cution de l'exemple
python test.py
